<Page 
    x:Class="SAP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"      
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Dark" Width="800" Height="480">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#D000" Height="60">
            <Grid>
                <TextBlock x:ConnectionId='13' x:Name="pageTitle" 
                           Margin="0,0,0,0" 
                           FontSize="30" 
                           HorizontalAlignment="Center" 
                           Foreground="#EEEADCDC">
                    Smart Aquaponics System Prototype V2.0
                </TextBlock>
            </Grid>
        </Border>

        <!-- Date Time -->
        <Grid Grid.Row="2">
            <StackPanel>
                <TextBlock x:ConnectionId='8' x:Name="Lbl_Date" 
                           Foreground="#EE35EA0D" 
                           FontSize="40" 
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center">
                    April 07, 2005
                </TextBlock>
                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="75" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:ConnectionId='10' x:Name="Lbl_Time" 
                               Grid.Column="1"
                               Foreground="#EEEADCDC" 
                               FontSize="145"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center">
                            01:27 AM
                    </TextBlock>
                    <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,15,0,0">                        
                        <RadioButton x:ConnectionId='11' x:Name="TwelveHrCb" 
                                     Content="12-HR" 
                                                                  
                                     VerticalContentAlignment="Top" 
                                     VerticalAlignment="Bottom"/>
                        <RadioButton x:ConnectionId='12' x:Name="TwentyFourHrCb" 
                                     Content="24-HR" 
                                                                      
                                     VerticalContentAlignment="Top" 
                                     VerticalAlignment="Bottom"/>
                    </StackPanel>
                </Grid>
                <TextBlock x:ConnectionId='9' x:Name="Lbl_Location" 
                        Foreground="#EE35EA0D" 
                        FontSize="40" 
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center">
                    Singapore, Singapore
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- Enable Speech Recognizer -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>                
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>            
            <CheckBox x:ConnectionId='4' x:Name="EnableSRCb"
                      Content="Enable Speech Recognizer" 
                                                   
                                                    
                      Grid.Column="0"
                      HorizontalAlignment="Left" 
                      Margin="10,0,0,0" 
                      FontSize="15"
                      Foreground="#EEEADCDC"
                      VerticalAlignment="Bottom" 
                      VerticalContentAlignment="Center"/>            
            <CheckBox x:ConnectionId='5' x:Name="EnablePSCb"
                      Content="Enable Auto Page Switching" 
                                                   
                                                    
                      Grid.Column="1"
                      HorizontalAlignment="Left" 
                      Margin="10,0,0,0" 
                      FontSize="15"
                      Foreground="#EEEADCDC"
                      VerticalAlignment="Bottom" 
                      VerticalContentAlignment="Center"/>
            <TextBlock x:ConnectionId='6' x:Name="DelayText" 
                       Grid.Column="2"
                       Text="Light" 
                       Margin="10" 
                       Foreground="#EEEADCDC"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Right"
                       TextAlignment="Center"                       
                       FontSize="15" />
            <Ellipse x:ConnectionId='7' x:Name="LED" 
                     Grid.Column="3"
                     Fill="LightGray" 
                     Stroke="White" 
                     Width="40" 
                     Height="40" 
                     Margin="10,0,10,0"/>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>                
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            
            <TextBlock x:ConnectionId='1' x:Name="SystemStatusTb" 
                       Grid.Column="0" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Bottom" 
                       FontSize="15" 
                       Foreground="#EEEADCDC" 
                       Margin="10,10,10,10">
                System Status:
            </TextBlock>
            <Button x:ConnectionId='2' Name="SensorsBtn" 
                    Content="" 
                    Margin="10,10,10,10" 
                                                                
                    Grid.Column="1" 
                    Width="40" Height="40" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom"
                    VerticalContentAlignment="Bottom" 
                    HorizontalContentAlignment="Right" Style="{StaticResource ButtonStyleForSIAPS}">
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/Sensor-icon.png"/>
                </Button.Background>
            </Button>
            <Button x:ConnectionId='3' Name="SettingsBtn" 
                    Content="" 
                    Margin="10,10,10,10" 
                                             
                    Grid.Column="2"
                    Height="40" Width="40"
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom"                     
                    VerticalContentAlignment="Bottom" 
                    HorizontalContentAlignment="Right" Style="{StaticResource ButtonStyleForSIAPS}">                    
                <Button.Background>
                    <ImageBrush ImageSource="Assets/Settings-icon.png"/>
                </Button.Background>
            </Button>             
        </Grid>
    </Grid>
</Page>

